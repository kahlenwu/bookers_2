<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, class: "fa fa-heart heart_like" do %>
    <span><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, class: "fa fa-heart heart_unlike" do %>
    <span><%= book.favorites.count %></span>
  <% end %>
<% end %>