<div class="container">
  <%= render 'layouts/error', model: @newbook %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @book.user, book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, size: "40x40", format:'jepg', fallback: "no_image.jpg" %>
                <br><%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td><%= render 'favorites/favorite-btn', book: @book %></td>
            <td>コメント数:<%= @book.book_comments.count %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？"%></td>
            <% end %>
          </tr>

        </tbody>
      </table>
      <%= render 'books/comment', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>