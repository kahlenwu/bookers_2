<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <div class="bd-subnavbar py-2">
      <div class="container">
        <div class="input-group">
          <%= f.text_field :content, class: "form-control" %>
          <%= f.submit '検索',class: "btn btn-primary" %>
          <%= f.select :model, options_for_select({'User' => 'user','Book' => 'book'}), prompt: 'Model', class: "form-select" %>
          <%= f.select :method, options_for_select({'完全一致' => 'perfect','部分一致' => 'partial','前方一致' => 'fowrward', '後方一致' => 'backward'}), prompt: '検索条件', class: "form-select" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>